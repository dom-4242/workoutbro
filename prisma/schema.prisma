generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Available roles in the system
enum Role {
  ATHLETE
  TRAINER
  ADMIN
}

// A user of the application
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  // Trainer-Athlet relation
  trainerId String?  // null = kein Trainer zugewiesen
  trainer   User?    @relation("TrainerAthletes", fields: [trainerId], references: [id])
  athletes  User[]   @relation("TrainerAthletes")

  // Other relations
  roles         UserRole[]
  weightEntries WeightEntry[]
  createdExercises Exercise[] @relation("CreatedExercises")

  // Training sessions
  athleteSessions  TrainingSession[] @relation("AthletesSessions")
  trainerSessions  TrainingSession[] @relation("TrainerSessions")
}

// Join table for User <-> Role (a user can have multiple roles)
model UserRole {
  id        String   @id @default(cuid())
  role      Role
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role]) // A user can't have the same role twice
}

// Daily weight measurement
model WeightEntry {
  id        String   @id @default(cuid())
  weight    Float    // in kg
  date      DateTime @default(now())
  note      String?  // optional note
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Exercise categories (predefined + custom allowed)
enum ExerciseCategory {
  CHEST
  BACK
  SHOULDERS
  LEGS
  ARMS
  CORE
  CARDIO
  CUSTOM
}

// Available fields that can be configured per exercise
enum ExerciseField {
  WEIGHT      // kg
  REPS        // count
  DISTANCE    // meters
  TIME        // seconds
  RPE         // Rate of Perceived Exertion (1-10)
  NOTES       // free text
}

// Exercise definition (created by admin)
model Exercise {
  id             String            @id @default(cuid())
  name           String
  category       ExerciseCategory
  customCategory String?           // Only filled when category = CUSTOM
  videoPath      String?           // Relative path, e.g., "/exercise-videos/bench-press.mp4"
  
  // Which fields are required when logging this exercise
  requiredFields ExerciseField[]
  
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  createdBy      String            // User ID of admin who created it
  creator        User              @relation("CreatedExercises", fields: [createdBy], references: [id])
  
  roundExercises RoundExercise[]  // NEU

  @@index([category])
  @@index([createdBy])
}

// ============================================
// PHASE 3B: TRAINING SESSION MODELS
// ============================================

// Session status
enum SessionStatus {
  WAITING      // Athlete waiting for trainer
  ACTIVE       // Trainer joined, session running
  COMPLETED    // All rounds completed
  CANCELLED    // Session cancelled
}

// Round status within session
enum RoundStatus {
  DRAFT        // Trainer planning, athlete can't see
  RELEASED     // Released by trainer, athlete can start
  ACTIVE       // Athlete currently executing
  COMPLETED    // Athlete completed
}

// Athlete feedback on exercise difficulty
enum ExerciseDifficulty {
  TOO_EASY
  JUST_RIGHT
  TOO_HARD
}

// Body regions for pain reporting (simplified for quick input)
enum BodyRegion {
  NECK_SHOULDERS
  CHEST
  UPPER_BACK
  LOWER_BACK
  ABS
  LEFT_ARM
  RIGHT_ARM
  LEFT_THIGH_FRONT
  LEFT_THIGH_BACK
  RIGHT_THIGH_FRONT
  RIGHT_THIGH_BACK
  LEFT_CALF
  RIGHT_CALF
  LEFT_KNEE
  RIGHT_KNEE
}

// Training session between athlete and trainer
model TrainingSession {
  id          String        @id @default(cuid())
  status      SessionStatus @default(WAITING)
  
  athleteId   String
  athlete     User          @relation("AthletesSessions", fields: [athleteId], references: [id])
  
  trainerId   String?
  trainer     User?         @relation("TrainerSessions", fields: [trainerId], references: [id])
  
  startedAt   DateTime      @default(now())
  joinedAt    DateTime?     // When trainer joined
  completedAt DateTime?
  
  rounds      SessionRound[]
  
  @@index([athleteId, status])
  @@index([trainerId, status])
}

// Round within a training session
model SessionRound {
  id          String       @id @default(cuid())
  roundNumber Int          // 1, 2, 3...
  status      RoundStatus  @default(DRAFT)
  
  sessionId   String
  session     TrainingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  releasedAt  DateTime?    // When trainer released
  completedAt DateTime?    // When athlete completed
  
  exercises   RoundExercise[]
  
  @@unique([sessionId, roundNumber])
  @@index([sessionId, status])
}

// Exercise within a round (with planned values and feedback)
model RoundExercise {
  id         String  @id @default(cuid())
  order      Int     // Order within round (1, 2, 3...)
  
  roundId    String
  round      SessionRound @relation(fields: [roundId], references: [id], onDelete: Cascade)
  
  exerciseId String
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  
  // Planned values (set by trainer based on Exercise.requiredFields)
  plannedWeight   Float?   // kg
  plannedReps     Int?     // count
  plannedDistance Float?   // meters
  plannedTime     Int?     // seconds
  plannedRPE      Int?     // 1-10
  trainerNotes    String?  // Notes from trainer
  
  // Athlete feedback (filled after execution, MANDATORY)
  difficulty      ExerciseDifficulty?
  hadPain         Boolean           @default(false)
  painRegions     BodyRegion[]      // Array of affected body regions
  athleteNotes    String?           // Optional feedback from athlete
  
  completedAt     DateTime?
  
  @@unique([roundId, order])
  @@index([roundId])
  @@index([exerciseId])
}